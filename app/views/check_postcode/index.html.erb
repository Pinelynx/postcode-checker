<%= form_tag check_postcode_path, method: :post do %>
  <%= label :postcode, 'Enter postcode you\'d like to check:' %>
  <%= text_field :postcode, nil, required: true %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= button_tag 'Check your postcode!', type: :submit %>
<% end %>
