<%= form_tag check_postcode_path, method: :post do %>
  <%= label :postcode, t('postcodes.view.form.prompt') %>
  <%= text_field_tag :postcode, nil, required: true %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= button_tag t('postcodes.view.form.button'), type: :submit %>
<% end %>
